# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/dbname
DATABASE_SSL_MODE=require
POSTGRES_DB=restaurant_db
POSTGRES_USER=restaurant_user
POSTGRES_PASSWORD=secure_password_123

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=UTC

# Application Settings
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=restaurant-system-bucket

# External API Keys
MAPS_API_KEY=your-maps-api-key
EMAIL_API_KEY=your-email-api-key
SMS_API_KEY=your-sms-api-key

# Cloud Database Configuration (for production)
# AWS RDS
# DATABASE_URL=postgresql://user:password@your-rds-endpoint:5432/dbname
# DATABASE_SSL_MODE=require

# Google Cloud SQL
# DATABASE_URL=postgresql://user:password@/dbname?host=/cloudsql/project:region:instance

# Azure Database
# DATABASE_URL=postgresql://user:password@your-azure-server.postgres.database.azure.com:5432/dbname

# Supabase
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Neon
# DATABASE_URL=postgresql://user:password@ep-example-123456.us-east-1.aws.neon.tech/dbname

# Monitoring and Logging
PROMETHEUS_ENABLED=true
STRUCTLOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Security
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
ALLOWED_HOSTS=["localhost", "yourdomain.com"]

# Performance
WORKER_CONCURRENCY=4
MAX_CONNECTIONS=20
POOL_SIZE=10 